{% extends 'base.html.twig' %}

{% block title %}Signaler un problème{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-800 mb-2">
        <i class="fas fa-exclamation-triangle mr-2 text-orange-500"></i>
        Signaler un problème
    </h1>
    <p class="text-gray-600 mb-8">Tâche: {{ task.title }}</p>

    <div class="bg-white rounded-xl shadow-lg p-8">
        {{ form_start(form) }}
        
        <div class="mb-6">
            {{ form_label(form.title, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
            {{ form_widget(form.title, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent'}}) }}
            {{ form_errors(form.title) }}
        </div>

        <div class="mb-6">
            {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent', 'rows': '6'}}) }}
            {{ form_errors(form.description) }}
            <p class="text-xs text-gray-500 mt-1">Décrivez le problème en détail pour aider votre chef de projet</p>
        </div>

        <div class="flex space-x-4">
            <button type="submit" class="flex-1 px-6 py-3 bg-gradient-to-r from-orange-600 to-red-600 hover:from-orange-700 hover:to-red-700 text-white font-semibold rounded-lg shadow-lg transition duration-300">
                <i class="fas fa-paper-plane mr-2"></i>Envoyer le signalement
            </button>
            <a href="{{ path('app_dashboard') }}" class="px-6 py-3 bg-gray-500 hover:bg-gray-600 text-white font-semibold rounded-lg transition duration-200">
                <i class="fas fa-times mr-2"></i>Annuler
            </a>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}