{# templates/admin/workspaces.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Gestion des espaces de travail{% endblock %}

{% block body %}
<div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-800">
        <i class="fas fa-layer-group mr-3 text-purple-500"></i>
        Espaces de travail
    </h1>
    <a href="{{ path('admin_workspace_new') }}" class="px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transition duration-300">
        <i class="fas fa-plus mr-2"></i>Nouvel espace
    </a>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for workspace in workspaces %}
    <div class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition duration-300 overflow-hidden">
        <div class="h-2 bg-gradient-to-r from-purple-400 to-pink-500"></div>
        <div class="p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-2">{{ workspace.name }}</h3>
            <p class="text-gray-600 text-sm mb-4">{{ workspace.description|slice(0, 100) }}{% if workspace.description|length > 100 %}...{% endif %}</p>
            
            <div class="mb-4">
                {% if workspace.manager %}
                    <p class="text-sm text-gray-600">
                        <i class="fas fa-user-tie text-green-500 mr-2"></i>
                        Chef: {{ workspace.manager.username }}
                    </p>
                {% else %}
                    <p class="text-sm text-gray-400">
                        <i class="fas fa-user-slash mr-2"></i>
                        Aucun chef assigné
                    </p>
                {% endif %}
            </div>

            <div class="text-sm text-gray-500 mb-4">
                <i class="fas fa-project-diagram mr-2"></i>
                {{ workspace.projects|length }} projet(s)
            </div>

            <a href="{{ path('admin_workspace_edit', {id: workspace.id}) }}" class="block text-center px-4 py-2 bg-purple-500 hover:bg-purple-600 text-white rounded-lg transition duration-200">
                <i class="fas fa-edit mr-1"></i>Modifier
            </a>
        </div>
    </div>
    {% else %}
    <div class="col-span-3 bg-white rounded-xl shadow-lg p-12 text-center">
        <i class="fas fa-layer-group text-6xl text-gray-300 mb-4"></i>
        <p class="text-gray-500 text-lg mb-4">Aucun espace de travail</p>
        <a href="{{ path('admin_workspace_new') }}" class="inline-block px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-semibold rounded-lg shadow-lg transition duration-300">
            <i class="fas fa-plus mr-2"></i>Créer le premier espace
        </a>
    </div>
    {% endfor %}
</div>
{% endblock %}

{# templates/project_manager/task_form.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{% if is_edit %}Modifier{% else %}Créer{% endif %} une tâche{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-800 mb-2">
        <i class="fas fa-tasks mr-2 text-blue-500"></i>
        {% if is_edit %}Modifier{% else %}Créer{% endif %} une tâche
    </h1>
    <p class="text-gray-600 mb-8">Projet: {{ project.name }}</p>

    <div class="bg-white rounded-xl shadow-lg p-8">
        {{ form_start(form) }}
        
        <div class="mb-6">
            {{ form_label(form.title, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
            {{ form_widget(form.title, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
            {{ form_errors(form.title) }}
        </div>

        <div class="mb-6">
            {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent', 'rows': '4'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
                {{ form_label(form.status, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                {{ form_widget(form.status, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                {{ form_errors(form.status) }}
            </div>

            <div>
                {{ form_label(form.dueDate, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                {{ form_widget(form.dueDate, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                {{ form_errors(form.dueDate) }}
            </div>
        </div>

        {% if form.assignedTo is defined %}
        <div class="mb-6">
            {{ form_label(form.assignedTo, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
            {{ form_widget(form.assignedTo, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
            {{ form_errors(form.assignedTo) }}
        </div>
        {% endif %}

        <div class="flex space-x-4">
            <button type="submit" class="flex-1 px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-semibold rounded-lg shadow-lg transition duration-300">
                <i class="fas fa-save mr-2"></i>
                {% if is_edit %}Enregistrer{% else %}Créer{% endif %}
            </button>
            <a href="{{ path('pm_project_show', {id: project.id}) }}" class="px-6 py-3 bg-gray-500 hover:bg-gray-600 text-white font-semibold rounded-lg transition duration-200">
                <i class="fas fa-times mr-2"></i>Annuler
            </a>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{# templates/project_manager/project_members.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Membres du projet - {{ project.name }}{% endblock %}

{% block body %}
<div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-2">
        <i class="fas fa-users mr-2 text-purple-500"></i>
        Membres du projet
    </h1>
    <p class="text-gray-600">{{ project.name }}</p>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <div class="bg-white rounded-xl shadow-lg p-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">
            <i class="fas fa-user-plus mr-2 text-green-500"></i>
            Ajouter un membre
        </h2>

        <div class="space-y-3">
            {% for user in all_users %}
                {% if user.id not in current_members and user.id != project.createdBy.id %}
                <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg border border-gray-200 hover:border-green-400 transition duration-200">
                    <div class="flex items-center">
                        <div class="w-10 h-10 bg-gradient-to-br from-blue-400 to-purple-500 rounded-full flex items-center justify-center text-white font-bold mr-3">
                            {{ user.username|slice(0, 1)|upper }}
                        </div>
                        <div>
                            <p class="font-semibold text-gray-800">{{ user.username }}</p>
                            <p class="text-xs text-gray-500">{{ user.email }}</p>
                        </div>
                    </div>
                    <button onclick="addMember({{ project.id }}, {{ user.id }})" class="px-4 py-2 bg-green-500 hover:bg-green-600 text-white text-sm rounded-lg transition duration-200">
                        <i class="fas fa-plus mr-1"></i>Ajouter
                    </button>
                </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">
            <i class="fas fa-users mr-2 text-blue-500"></i>
            Membres actuels
        </h2>

        <div class="space-y-3">
            <div class="flex items-center p-4 bg-gradient-to-r from-blue-50 to-purple-50 rounded-lg border-2 border-blue-200">
                <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-bold mr-3">
                    {{ project.createdBy.username|slice(0, 1)|upper }}
                </div>
                <div class="flex-1">
                    <p class="font-semibold text-gray-800">{{ project.createdBy.username }}</p>
                    <p class="text-xs text-gray-500">
                        <i class="fas fa-crown text-yellow-500 mr-1"></i>Chef de projet
                    </p>
                </div>
            </div>

            {% for member in project.projectMembers %}
            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg border border-gray-200">
                <div class="flex items-center">
                    <div class="w-10 h-10 bg-gray-400 rounded-full flex items-center justify-center text-white font-bold mr-3">
                        {{ member.user.username|slice(0, 1)|upper }}
                    </div>
                    <div>
                        <p class="font-semibold text-gray-800">{{ member.user.username }}</p>
                        <p class="text-xs text-gray-500">{{ member.user.email }}</p>
                    </div>
                </div>
                <button onclick="removeMember({{ project.id }}, {{ member.user.id }})" class="px-4 py-2 bg-red-500 hover:bg-red-600 text-white text-sm rounded-lg transition duration-200">
                    <i class="fas fa-times mr-1"></i>Retirer
                </button>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

<div class="mt-8">
    <a href="{{ path('pm_project_show', {id: project.id}) }}" class="inline-block px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-lg shadow-lg transition duration-300">
        <i class="fas fa-arrow-left mr-2"></i>Retour au projet
    </a>
</div>
{% endblock %}

{% block javascripts %}
<script>
function addMember(projectId, userId) {
    const formData = new FormData();
    formData.append('user_id', userId);

    fetch(`/project-manager/project/${projectId}/member/add`, {
        method: 'POST',
        body: formData,
        headers: {'X-Requested-With': 'XMLHttpRequest'}
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        } else {
            alert(data.message);
        }
    });
}

function removeMember(projectId, userId) {
    if (!confirm('Êtes-vous sûr de vouloir retirer ce membre ?')) return;

    fetch(`/project-manager/project/${projectId}/member/${userId}/remove`, {
        method: 'POST',
        headers: {'X-Requested-With': 'XMLHttpRequest'}
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        } else {
            alert(data.message);
        }
    });
}
</script>
{% endblock %}

