{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center px-4">
    <div class="max-w-md w-full">
        <div class="text-center mb-8">
            <div class="inline-block w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-2xl flex items-center justify-center mb-4 shadow-xl">
                <i class="fas fa-tasks text-white text-3xl"></i>
            </div>
            <h2 class="text-4xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                TaskManager
            </h2>
            <p class="text-gray-600 mt-2">Connectez-vous à votre compte</p>
        </div>

        <div class="bg-white rounded-2xl shadow-2xl p-8">
            {% if error %}
                <div class="mb-4 p-4 bg-red-100 border-l-4 border-red-500 text-red-700 rounded">
                    <i class="fas fa-exclamation-circle mr-2"></i>
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post" action="{{ path('app_login') }}">
                <div class="mb-6">
                    <label for="username" class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-envelope mr-2 text-blue-500"></i>Email
                    </label>
                    <input type="email" 
                           id="username" 
                           name="_username" 
                           value="{{ last_username }}" 
                           required 
                           autofocus
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200">
                </div>

                <div class="mb-6">
                    <label for="password" class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-lock mr-2 text-blue-500"></i>Mot de passe
                    </label>
                    <input type="password" 
                           id="password" 
                           name="_password" 
                           required
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200">
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button type="submit" 
                        class="w-full py-3 px-4 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transition duration-300 transform hover:scale-105">
                    <i class="fas fa-sign-in-alt mr-2"></i>Se connecter
                </button>
            </form>

            <div class="mt-8 pt-6 border-t border-gray-200">
                <p class="text-sm text-gray-600 text-center mb-3">
                    <i class="fas fa-info-circle mr-2 text-blue-500"></i>
                    Comptes de démonstration
                </p>
                <div class="space-y-2 text-xs text-gray-500">
                    <div class="flex items-center justify-between p-2 bg-gray-50 rounded">
                        <span><i class="fas fa-crown text-red-500 mr-2"></i>Admin</span>
                        <span class="font-mono">admin@taskmanager.com / admin123</span>
                    </div>
                    <div class="flex items-center justify-between p-2 bg-gray-50 rounded">
                        <span><i class="fas fa-user-tie text-green-500 mr-2"></i>Chef</span>
                        <span class="font-mono">manager@taskmanager.com / manager123</span>
                    </div>
                    <div class="flex items-center justify-between p-2 bg-gray-50 rounded">
                        <span><i class="fas fa-user text-blue-500 mr-2"></i>User</span>
                        <span class="font-mono">user@taskmanager.com / user123</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}