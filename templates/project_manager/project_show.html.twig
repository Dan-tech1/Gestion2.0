<script>
function resolveIssue(issueId) {
    if (!confirm('Marquer ce problème comme résolu ?')) return;
    
    fetch(`/project-manager/issue/${issueId}/resolve`, {
        method: 'POST',
        headers: {'X-Requested-With': 'XMLHttpRequest'}
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) location.reload();
    });
}

function uploadFile(projectId) {
    alert('Fonctionnalité d\'upload de fichiers à implémenter\nProjet ID: ' + projectId);
    // Ici on pourrait ouvrir un modal d'upload ou rediriger vers une page d'upload
}

// Image upload functionality
document.addEventListener('DOMContentLoaded', function() {
    const uploadBtn = document.getElementById('upload-btn');
    const uploadModal = document.getElementById('upload-modal');
    const closeModal = document.getElementById('close-modal');
    const cancelUpload = document.getElementById('cancel-upload');
    const uploadForm = document.getElementById('upload-form');
    const imageInput = document.getElementById('image-input');
    const submitUpload = document.getElementById('submit-upload');
    const uploadProgress = document.getElementById('upload-progress');
    const imagesContainer = document.getElementById('images-container');

    // Open modal
    uploadBtn.addEventListener('click', function() {
        uploadModal.classList.remove('hidden');
    });

    // Close modal
    function closeUploadModal() {
        uploadModal.classList.add('hidden');
