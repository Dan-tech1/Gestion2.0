{% extends 'base.html.twig' %}

{% block title %}{{ project.name }}{% endblock %}

{% block body %}
<div class="mb-8">
    <div class="flex justify-between items-start">
        <div>
            <h1 class="text-4xl font-bold text-gray-800 mb-2">{{ project.name }}</h1>
            <p class="text-gray-600">{{ project.description }}</p>
        </div>
        {% if project.createdBy == app.user %}
        <div class="flex space-x-3">
            <a href="{{ path('pm_project_edit', {id: project.id}) }}" class="px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-lg transition duration-200">
                <i class="fas fa-edit mr-2"></i>Modifier
            </a>
            <a href="{{ path('pm_project_members', {id: project.id}) }}" class="px-4 py-2 bg-purple-500 hover:bg-purple-600 text-white rounded-lg transition duration-200">
                <i class="fas fa-users mr-2"></i>Membres
            </a>
        </div>
        </div>
        {% endif %}
        <!-- Images du projet -->
        <div class="col-span-full mt-6">
            <div class="flex justify-between items-center mb-3">
                <h3 class="text-lg font-semibold text-gray-700">
                    <i class="fas fa-images mr-2 text-blue-500"></i>Images du projet
                </h3>
                {% if project.createdBy == app.user %}
                <button id="upload-btn" class="px-4 py-2 bg-green-500 hover:bg-green-600 text-white rounded-lg transition duration-200">
                    <i class="fas fa-upload mr-2"></i>Ajouter une image
                </button>
                {% endif %}
            </div>

            <div id="images-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                {% for image in project.images %}
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <img src="{{ asset('uploads/project_images/' ~ image.filename) }}"
                         alt="{{ image.originalName }}"
                         class="w-full h-48 object-cover">
                    <div class="p-3">
                        <p class="text-sm text-gray-600 truncate">{{ image.originalName }}</p>
                        <p class="text-xs text-gray-400">{{ image.uploadedAt|date('d/m/Y H:i') }}</p>
                    </div>
                </div>
                {% endfor %}
            </div>

            {% if project.images is empty %}
            <div class="bg-gray-50 rounded-lg p-8 text-center">
                <i class="fas fa-image text-gray-300 text-4xl mb-4"></i>
                <p class="text-gray-500">Aucune image pour ce projet</p>
                {% if project.createdBy == app.user %}
                <p class="text-sm text-gray-400 mt-2">Cliquez sur "Ajouter une image" pour commencer</p>
                {% endif %}
            </div>
            {% endif %}
        </div>

        <!-- Modal d'upload -->
        <div id="upload-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
            <div class="flex items-center justify-center min-h-screen p-4">
                <div class="bg-white rounded-lg max-w-md w-full p-6">
                    <div class="flex justify-between items-center mb-4">
                        <h3 class="text-lg font-semibold">Ajouter une image</h3>
                        <button id="close-modal" class="text-gray-400 hover:text-gray-600">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>

                    <form id="upload-form" enctype="multipart/form-data">
                        <div class="mb-4">
                            <label for="image-input" class="block text-sm font-medium text-gray-700 mb-2">
                                Sélectionner une image
                            </label>
                            <input type="file" id="image-input" name="image" accept="image/*"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <p class="text-xs text-gray-500 mt-1">Formats acceptés: JPEG, PNG, GIF, WebP. Taille max: 5MB</p>
                        </div>

                        <div class="flex justify-end space-x-3">
                            <button type="button" id="cancel-upload" class="px-4 py-2 text-gray-600 border border-gray-300 rounded-md hover:bg-gray-50">
                                Annuler
                            </button>
                            <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 disabled:opacity-50" id="submit-upload" disabled>
                                <i class="fas fa-upload mr-2"></i>Uploader
                            </button>
                        </div>
                    </form>

                    <div id="upload-progress" class="hidden mt-4">
                        <div class="bg-gray-200 rounded-full h-2">
                            <div class="bg-blue-500 h-2 rounded-full transition-all duration-300" style="width: 0%"></div>
                        </div>
                        <p class="text-sm text-gray-600 mt-2">Upload en cours...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-xl shadow-lg p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-gray-500 text-sm mb-1">Statut</p>
                {% if project.status == 'TERMINE' %}
                    <p class="text-2xl font-bold text-green-600">
                        <i class="fas fa-check-circle mr-2"></i>Terminé
                    </p>
                {% else %}
                    <p class="text-2xl font-bold text-blue-600">
                        <i class="fas fa-spinner mr-2"></i>En cours
                    </p>
                {% endif %}
            </div>
        </div>
    </div>
    
    <div class="bg-white rounded-xl shadow-lg p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-gray-500 text-sm mb-1">Tâches</p>
                <p class="text-2xl font-bold text-gray-800">
                    <i class="fas fa-tasks mr-2 text-blue-500"></i>
                    {{ project.tasks|length }}
                </p>
            </div>
        </div>
    </div>
    
    <div class="bg-white rounded-xl shadow-lg p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-gray-500 text-sm mb-1">Membres</p>
                <p class="text-2xl font-bold text-gray-800">
                    <i class="fas fa-users mr-2 text-purple-500"></i>
                    {{ project.projectMembers|length }}
                </p>
            </div>
        </div>
    </div>
</div>

{% if issues|length > 0 %}
<div class="bg-orange-50 border-l-4 border-orange-500 rounded-lg p-6 mb-8">
    <h3 class="text-lg font-semibold text-orange-800 mb-4">
        <i class="fas fa-exclamation-triangle mr-2"></i>
        Problèmes non résolus ({{ issues|length }})
    </h3>
    <div class="space-y-3">
        {% for issue in issues %}
        <div class="bg-white rounded-lg p-4 shadow">
            <div class="flex justify-between items-start">
                <div>
                    <h4 class="font-semibold text-gray-800">{{ issue.title }}</h4>
                    <p class="text-sm text-gray-600 mt-1">{{ issue.description }}</p>
                    <p class="text-xs text-gray-500 mt-2">
                        Tâche: {{ issue.task.title }} • Signalé par: {{ issue.reportedBy.username }}
                    </p>
                </div>
                {% if project.createdBy == app.user %}
                <button onclick="resolveIssue({{ issue.id }})" class="ml-4 px-3 py-1 bg-green-500 hover:bg-green-600 text-white text-sm rounded">
                    Résoudre
                </button>
                {% endif %}
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endif %}

<div class="bg-white rounded-xl shadow-lg p-6 mb-8">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800">
            <i class="fas fa-list-check mr-2 text-blue-500"></i>
            Tâches
        </h2>
        {% if project.createdBy == app.user %}
        <a href="{{ path('pm_task_new', {id: project.id}) }}" class="px-4 py-2 bg-green-500 hover:bg-green-600 text-white rounded-lg transition duration-200">
            <i class="fas fa-plus mr-2"></i>Nouvelle tâche
        </a>
        {% endif %}
    </div>
    
    {% if project.tasks|length > 0 %}
    <div class="space-y-4">
        {% for task in project.tasks %}
        <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition duration-200">
            <div class="flex justify-between items-start">
                <div class="flex-1">
                    <div class="flex items-center gap-3 mb-2">
                        <h3 class="text-lg font-semibold text-gray-800">{{ task.title }}</h3>
                        {% if task.status == 'TERMINE' %}
                            <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-semibold rounded-full">
                                <i class="fas fa-check-circle mr-1"></i>Terminé
                            </span>
                        {% else %}
                            <span class="px-2 py-1 bg-yellow-100 text-yellow-800 text-xs font-semibold rounded-full">
                                <i class="fas fa-clock mr-1"></i>En cours
                            </span>
                        {% endif %}
                    </div>
                    
                    <p class="text-gray-600 text-sm mb-3">{{ task.description }}</p>
                    
                    <div class="flex items-center gap-4 text-sm text-gray-500">
                        {% if task.assignedTo %}
                            <span>
                                <i class="fas fa-user mr-1 text-blue-500"></i>
                                {{ task.assignedTo.username }}
                            </span>
                        {% else %}
                            <span class="text-gray-400">
                                <i class="fas fa-user-slash mr-1"></i>
                                Non assigné
                            </span>
                        {% endif %}
                        
                        {% if task.dueDate %}
                            <span>
                                <i class="fas fa-calendar mr-1 text-purple-500"></i>
                                {{ task.dueDate|date('d/m/Y') }}
                            </span>
                        {% endif %}
                    </div>
                </div>
                
                {% if project.createdBy == app.user %}
                <a href="{{ path('pm_task_edit', {id: task.id}) }}" class="ml-4 px-3 py-2 bg-blue-500 hover:bg-blue-600 text-white text-sm rounded transition duration-200">
                    <i class="fas fa-edit"></i>
                </a>
                {% endif %}
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="text-center py-12">
        <i class="fas fa-clipboard-list text-6xl text-gray-300 mb-4"></i>
        <p class="text-gray-500">Aucune tâche pour ce projet</p>
    </div>
    {% endif %}
</div>

