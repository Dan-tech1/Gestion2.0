{% extends 'base.html.twig' %}

{% block title %}Dashboard Chef de Projet{% endblock %}

{% block body %}
<div class="mb-8">
    <h1 class="text-4xl font-bold text-gray-800 mb-2">
        <i class="fas fa-user-tie text-green-500 mr-3"></i>
        Dashboard Chef de Projet
    </h1>
    <p class="text-gray-600">Gérez vos projets et votre équipe</p>
</div>

{% if issues|length > 0 %}
<div class="bg-gradient-to-r from-orange-50 to-red-50 border-l-4 border-orange-500 rounded-lg p-6 mb-8 shadow-lg">
    <h3 class="text-lg font-semibold text-orange-800 mb-4">
        <i class="fas fa-exclamation-triangle mr-2"></i>
        Problèmes signalés ({{ issues|length }})
    </h3>
    <div class="space-y-3">
        {% for issue in issues|slice(0, 3) %}
        <div class="bg-white rounded-lg p-4 shadow">
            <div class="flex justify-between items-start">
                <div class="flex-1">
                    <h4 class="font-semibold text-gray-800">{{ issue.title }}</h4>
                    <p class="text-sm text-gray-600 mt-1">{{ issue.description|slice(0, 80) }}...</p>
                    <p class="text-xs text-gray-500 mt-2">
                        <i class="fas fa-tasks mr-1"></i>{{ issue.task.title }} 
                        <span class="mx-2">•</span>
                        <i class="fas fa-user mr-1"></i>{{ issue.reportedBy.username }}
                    </p>
                </div>
                <button onclick="resolveIssue({{ issue.id }})" class="ml-4 px-3 py-1 bg-green-500 hover:bg-green-600 text-white text-sm rounded transition duration-200">
                    <i class="fas fa-check mr-1"></i>Résoudre
                </button>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endif %}

<div class="mb-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">
        <i class="fas fa-star text-yellow-500 mr-2"></i>
        Mes Projets (Chef)
    </h2>
    
    {% if managed_projects|length > 0 %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for project in managed_projects %}
        <div class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition duration-300 overflow-hidden">
            <div class="h-2 bg-gradient-to-r from-green-400 to-blue-500"></div>
            <div class="p-6">
                <div class="flex items-start justify-between mb-3">
                    <h3 class="text-xl font-bold text-gray-800">{{ project.name }}</h3>
                    {% if project.status == 'TERMINE' %}
                        <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-semibold rounded-full">
                            <i class="fas fa-check-circle mr-1"></i>Terminé
                        </span>
                    {% else %}
                        <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs font-semibold rounded-full">
                            <i class="fas fa-spinner mr-1"></i>En cours
                        </span>
                    {% endif %}
                </div>
                
                <p class="text-gray-600 text-sm mb-4">{{ project.description|slice(0, 100) }}{% if project.description|length > 100 %}...{% endif %}</p>
                
                <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
                    <span>
                        <i class="fas fa-tasks mr-1"></i>
                        {{ project.tasks|length }} tâche(s)
                    </span>
                    <span>
                        <i class="fas fa-users mr-1"></i>
                        {{ project.projectMembers|length }} membre(s)
                    </span>
                </div>
                
                <div class="flex space-x-2">
                    <a href="{{ path('pm_project_show', {id: project.id}) }}" class="flex-1 text-center px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-lg transition duration-200">
                        <i class="fas fa-eye mr-1"></i>Voir
                    </a>
                    <a href="{{ path('pm_project_edit', {id: project.id}) }}" class="px-4 py-2 bg-gray-500 hover:bg-gray-600 text-white rounded-lg transition duration-200">
                        <i class="fas fa-edit"></i>
                    </a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="bg-white rounded-xl shadow-lg p-12 text-center">
        <i class="fas fa-folder-open text-6xl text-gray-300 mb-4"></i>
        <p class="text-gray-500 mb-4">Vous ne gérez aucun projet pour le moment</p>
        <a href="{{ path('pm_project_new') }}" class="inline-block px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-semibold rounded-lg shadow-lg transition duration-300">
            <i class="fas fa-plus mr-2"></i>Créer un projet
        </a>
    </div>
    {% endif %}
</div>

{% if member_projects|length > 0 %}
<div>
    <h2 class="text-2xl font-bold text-gray-800 mb-4">
        <i class="fas fa-users text-purple-500 mr-2"></i>
        Projets où je suis membre
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for project in member_projects %}
        <div class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition duration-300 overflow-hidden">
            <div class="h-2 bg-gradient-to-r from-purple-400 to-pink-500"></div>
            <div class="p-6">
                <h3 class="text-xl font-bold text-gray-800 mb-2">{{ project.name }}</h3>
                <p class="text-gray-600 text-sm mb-4">{{ project.description|slice(0, 100) }}</p>
                <p class="text-xs text-gray-500 mb-4">
                    <i class="fas fa-user-tie mr-1"></i>
                    Chef: {{ project.createdBy.username }}
                </p>
                <a href="{{ path('pm_project_show', {id: project.id}) }}" class="block text-center px-4 py-2 bg-purple-500 hover:bg-purple-600 text-white rounded-lg transition duration-200">
                    <i class="fas fa-eye mr-1"></i>Voir le projet
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endif %}
{% endblock %}

{% block javascripts %}
<script>
function resolveIssue(issueId) {
    if (!confirm('Marquer ce problème comme résolu ?')) return;
    
    fetch(`/project-manager/issue/${issueId}/resolve`, {
        method: 'POST',
        headers: {'X-Requested-With': 'XMLHttpRequest'}
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        }
    });
}
</script>
{% endblock %}