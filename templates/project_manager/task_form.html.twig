{% extends 'base.html.twig' %}

{% block title %}{% if is_edit %}Modifier{% else %}Créer{% endif %} une tâche{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-800 mb-8">
        <i class="fas fa-tasks mr-2 text-orange-500"></i>
        {% if is_edit %}Modifier{% else %}Créer{% endif %} une tâche
    </h1>

    <div class="bg-white rounded-xl shadow-lg p-8">
        {{ form_start(form) }}

        <div class="mb-6">
            {{ form_label(form.title, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
            {{ form_widget(form.title, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent'}}) }}
            {{ form_errors(form.title) }}
        </div>

        <div class="mb-6">
            {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent', 'rows': '4'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="mb-6">
            {{ form_label(form.status, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
            {{ form_widget(form.status, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent'}}) }}
            {{ form_errors(form.status) }}
        </div>

        <div class="mb-6">
            {{ form_label(form.dueDate, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
            {{ form_widget(form.dueDate, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent'}}) }}
            {{ form_errors(form.dueDate) }}
        </div>

        <div class="mb-6">
            {{ form_label(form.assignedTo, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
            {{ form_widget(form.assignedTo, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent'}}) }}
            {{ form_errors(form.assignedTo) }}
        </div>

        <div class="flex space-x-4">
            <button type="submit" class="flex-1 px-6 py-3 bg-gradient-to-r from-orange-600 to-red-600 hover:from-orange-700 hover:to-red-700 text-white font-semibold rounded-lg shadow-lg transition duration-300">
                <i class="fas fa-save mr-2"></i>
                {% if is_edit %}Enregistrer{% else %}Créer{% endif %}
            </button>
            <a href="{{ path('pm_project_show', {'id': project.id}) }}" class="px-6 py-3 bg-gray-500 hover:bg-gray-600 text-white font-semibold rounded-lg transition duration-200">
                <i class="fas fa-times mr-2"></i>Annuler
            </a>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}