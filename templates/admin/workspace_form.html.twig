{% extends 'base.html.twig' %}

{% block title %}{% if is_edit %}Modifier{% else %}Créer{% endif %} un espace de travail{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-800 mb-8">
        <i class="fas fa-layer-group mr-2 text-purple-500"></i>
        {% if is_edit %}Modifier{% else %}Créer{% endif %} un espace de travail
    </h1>

    <div class="bg-white rounded-xl shadow-lg p-8">
        {{ form_start(form) }}
        
        <div class="mb-6">
            {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="mb-6">
            {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent', 'rows': '4'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="mb-6">
            {{ form_label(form.manager, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
            {{ form_widget(form.manager, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent'}}) }}
            {{ form_errors(form.manager) }}
        </div>

        <div class="flex space-x-4">
            <button type="submit" class="flex-1 px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-semibold rounded-lg shadow-lg transition duration-300">
                <i class="fas fa-save mr-2"></i>
                {% if is_edit %}Enregistrer{% else %}Créer{% endif %}
            </button>
            <a href="{{ path('admin_workspaces') }}" class="px-6 py-3 bg-gray-500 hover:bg-gray-600 text-white font-semibold rounded-lg transition duration-200">
                <i class="fas fa-times mr-2"></i>Annuler
            </a>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}