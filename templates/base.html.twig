<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Task Manager{% endblock %}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @keyframes slideIn {
            from { transform: translateY(-100%); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }
        .animate-slide-in { animation: slideIn 0.3s ease-out; }
    </style>
    {% block stylesheets %}{% endblock %}
</head>
<body class="bg-gradient-to-br from-slate-50 to-slate-100 min-h-screen">
    {% if app.user %}
    <nav class="bg-white shadow-lg sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <a href="{{ path('app_dashboard') }}" class="flex items-center space-x-3">
                        <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center">
                            <i class="fas fa-tasks text-white text-xl"></i>
                        </div>
                        <span class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                            TaskManager
                        </span>
                    </a>
                </div>
                
                <div class="flex items-center space-x-4">
                    <span class="text-gray-600">
                        <i class="fas fa-user-circle mr-2"></i>
                        {{ app.user.username }}
                    </span>
                    
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('admin_dashboard') }}" class="px-4 py-2 rounded-lg bg-red-500 hover:bg-red-600 text-white transition duration-200">
                            <i class="fas fa-crown mr-2"></i>Admin
                        </a>
                    {% elseif is_granted('ROLE_PROJECT_MANAGER') %}
                        <a href="{{ path('pm_project_new') }}" class="px-4 py-2 rounded-lg bg-green-500 hover:bg-green-600 text-white transition duration-200">
                            <i class="fas fa-plus mr-2"></i>Nouveau projet
                        </a>
                    {% endif %}
                    
                    <a href="{{ path('app_logout') }}" class="px-4 py-2 rounded-lg bg-gray-500 hover:bg-gray-600 text-white transition duration-200">
                        <i class="fas fa-sign-out-alt mr-2"></i>DÃ©connexion
                    </a>
                </div>
            </div>
        </div>
    </nav>
    {% endif %}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="animate-slide-in max-w-7xl mx-auto mt-4 px-4">
                <div class="p-4 rounded-lg shadow-lg {% if label == 'success' %}bg-green-100 text-green-800 border-l-4 border-green-500{% elseif label == 'error' %}bg-red-100 text-red-800 border-l-4 border-red-500{% elseif label == 'warning' %}bg-yellow-100 text-yellow-800 border-l-4 border-yellow-500{% else %}bg-blue-100 text-blue-800 border-l-4 border-blue-500{% endif %}">
                    <i class="fas {% if label == 'success' %}fa-check-circle{% elseif label == 'error' %}fa-exclamation-circle{% elseif label == 'warning' %}fa-exclamation-triangle{% else %}fa-info-circle{% endif %} mr-2"></i>
                    {{ message }}
                </div>
            </div>
        {% endfor %}
    {% endfor %}

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        {% block body %}{% endblock %}
    </main>

    {% block javascripts %}{% endblock %}
</body>
</html>